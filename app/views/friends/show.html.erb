

 <div class="row">
    <div class="s12 m4 l8">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"> <strong><h1>Friend Info</h1></strong></span>
          <hr>
         
<p> <h5> 
  <strong>First name:</strong>
  <%= @friend.first_name %></h5>
</p>

<br>

<p><h5> 
  <strong>Last name:</strong>
  <%= @friend.last_name %></h5>
</p>

<br>


<p><h5> 
  <strong>Email:</strong>
  <%= @friend.email %></h5>
</p>

<br>


<p><h5> 
  <strong>Phone:</strong>
  <%= @friend.phone %></h5>
</p>

<br>


<p><h5> 
  <strong>Twitter:</strong>
  <%= @friend.twitter %></h5>
</p>
        </div>
        <div class="card-action">
         <%= link_to 'Edit', edit_friend_path(@friend), class:"waves-effect waves-teal btn" %> |
          <%= link_to 'Back', friends_path ,class:"waves-effect waves-teal btn" %>
        </div>
      </div>
    </div>
  </div>

<style>
.btn:nth-child(odd){
  background-color: #37474f;
}
.btn:nth-child(even){
  background-color: #006064;
}
</style>